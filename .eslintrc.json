{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true
  },
	"plugins": [
		"no-jquery"
	],
  "extends": [
    "eslint:recommended",
    "wordpress",
		"plugin:no-jquery/deprecated"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "complexity": [
      "warn", {
        "max": 8
      }
    ],
    "eqeqeq": [
      "error",
      "smart"
    ],
    "lines-around-comment": "off",
    "space-in-parens": [
      "warn",
      "always"
    ],
    "no-empty-function": [
      "warn", {
        "allow": [
          "methods"
        ]
      }
    ],
    "no-multi-spaces": [
      "warn", {
        "exceptions": {
          "VariableDeclarator": true
        }
      }
    ],
    "no-unused-vars": [
      "error", {
        "args": "after-used"
      }
    ],
    "vars-on-top": "off",
    "wrap-iife": [
      "error",
      "inside"
    ],
    "yoda": "off"
  }
}
